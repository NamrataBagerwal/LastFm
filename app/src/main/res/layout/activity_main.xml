<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/topChartsTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_8"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/sp_16"
        tools:text="@string/top_charts_tv_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topChartsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/trendingSongsTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_8"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/sp_16"
        tools:text="@string/trending_songs_tv_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trendingSongsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/popularAlbumsTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_8"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/sp_16"
        tools:text="@string/popular_albums_tv_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/popularAlbumsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="@dimen/dp_8"
        />

    <TextView
        android:id="@+id/featuredArtistsTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_margin="@dimen/dp_8"
        android:fontFamily="sans-serif-black"
        android:textSize="@dimen/sp_16"
        tools:text="@string/featured_artists_tv_label" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/featuredArtistsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_margin="@dimen/dp_8"
        />

</LinearLayout>